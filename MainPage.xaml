<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LoanManagement"
             xmlns:components="clr-namespace:LoanManagement.Components"
             x:Class="LoanManagement.MainPage">

    <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type components:Routes}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="OpenSansRegular" />
            </Style>

            <!-- Font Awesome -->
            <FontImageSource x:Key="FaSolid"
                         FontFamily="FA-Solid"
                         Glyph="{x:Null}" />
        </ResourceDictionary>
    </Application.Resources>

</ContentPage>
